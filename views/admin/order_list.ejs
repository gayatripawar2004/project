<%-include("navbar.ejs")%>

<div class="container-fluid bg-white m-4 p-5">
    <h1 style="text-transform: capitalize;"><%-status%> List</h1>
  <div class="row">
    <div class="col-md-12 mt-4">
        <table class="table table-bordered">
            <tr>
                <th>Action</th>
                <th>Sr.No</th>
                <th>Customer Name</th>
                <th>Customer Mobile</th>
                <th>Address</th>
                <th>Order Amount</th>               
            </tr>
            <% orders.map(function(val,i){%>
            
                <tr>
                    <td><a href="/admin/order_info/<%=val.order_id%>" class="btn btn-primary">Details</button></td>
                     <td><%=i+1%></td>
                    <td><%=val.customer_name%></td>
                    <td><%=val.customer_mobile%></td>
                    <td><%=val.customer_landmark%>,<%=val.customer_city%>,<%=val.customer_district%>,<%=val.customer_state%> - <%=val.customer_pincode%></td>
                    <td><%=val.order_amount%>-<%=val.payment_type%></td>
                   
                </tr>
            <%})%>
        </table>
    </div>
  </div>
</div>
<%-include("footer.ejs")%>